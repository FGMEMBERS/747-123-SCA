<?xml version="1.0"?>

<PropertyList>

 <path>cylinder.ac</path>

<!-- trim -->

 <animation>
  <type>rotate</type>
  <object-name>TrimLever</object-name>
  <property>controls/flight/elevator-trim</property>
  <factor>-25</factor>
  <center>
   <x-m>0.0</x-m>
   <y-m>0.0</y-m>
   <z-m>0.0</z-m>
  </center>
  <axis>
   <x>0.0</x>
   <y>1.0</y>
   <z>0.0</z>
  </axis>
 </animation>

 <animation>
  <type>pick</type>
  <object-name>TrimLever</object-name>
  <action>
   <button>0</button>
   <repeatable>false</repeatable>
   <binding>
    <command>property-adjust</command>
    <property>controls/flight/elevator-trim</property>
    <step>0.003</step>
    <min>0</min>
    <max>1</max>
    <wrap>0</wrap>
   </binding>
  </action>
  <action>
   <button>1</button>
   <repeatable>false</repeatable>
   <binding>
    <command>property-adjust</command>
    <property>controls/flight/elevator-trim</property>
    <step>-0.003</step>
    <min>0</min>
    <max>1</max>
    <wrap>0</wrap>
   </binding>
  </action>
 </animation>

