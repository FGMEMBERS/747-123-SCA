<?xml version="1.0"?>

<!-- Autothrottle switch :

-->

<PropertyList>

 <name>Autothrottle switch</name>
 <w-base>120</w-base>
 <h-base>120</h-base>


 <layers>

  <layer>
   <name>lamp</name>
   <type>switch</type>

   <layer>
    <name>on</name>
    <type>group</type>
    <condition>
     <property>/controls/autoflight/autothrottle-engage</property>
    </condition>

    <layer include="747-bulb-led-on.xml">
     <w>25</w>
     <h>25</h>
    </layer>
    <layer>
     <name>knob on</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/led.rgb</path>
      <x1>0.25</x1>
      <y1>0.0</y1>
      <x2>0.5</x2>
      <y2>0.25</y2>
     </texture>
     <w>25</w>
     <h>25</h>
     <emissive>true</emissive>
    </layer>
   </layer>

   <layer>
    <name>off</name>
    <type>group</type>

    <layer include="747-bulb-led-off.xml">
     <w>25</w>
     <h>25</h>
    </layer>
    <layer>
     <name>knob off</name>
     <texture>
      <path>Aircraft/747-200/Panels/Instruments/Textures/led.rgb</path>
      <x1>0.25</x1>
      <y1>0.0</y1>
      <x2>0.5</x2>
      <y2>0.25</y2>
     </texture>
     <w>25</w>
     <h>25</h>
    </layer>
   </layer>
   <transformations>
    <transformation>
    <type>x-shift</type>
     <offset>40</offset>
    </transformation>
    <transformation>
    <type>y-shift</type>
     <offset>50</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Emergency switch</name>
   <type>switch</type>

   <layer>
    <condition>
     <property>/controls/autoflight/autothrottle-engage</property>
    </condition>
    <name>on</name>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/switches.rgb</path>
     <x1>0.0</x1>
     <y1>0.74</y1>
     <x2>0.25</x2>
     <y2>1.0</y2>
    </texture>
    <w>40</w>
    <h>40</h>
    <transformations>
     <transformation>
      <type>y-shift</type>
      <offset>2.75</offset>
     </transformation>
    </transformations>
   </layer>
   <layer>
    <name>off</name>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/switches.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>0.25</x2>
     <y2>0.31</y2>
    </texture>
    <w>40</w>
    <h>47</h>
   </layer>
  </layer>

  <layer>
   <name>Title on</name>
   <type>text</type>
   <point-size>18</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>ON</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-5</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>35</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

 <actions>

  <action>
   <name>Toggle autothrottle</name>
   <button>0</button>
   <x>-21</x>
   <y>-21</y>
   <w>42</w>
   <h>42</h>
   <binding>
    <command>nasal</command>
    <script>globals.Boeing747.autothrottlesystem.attoggleexport();</script>
   </binding>
   <binding>
    <command>property-toggle</command>
    <property>/instrumentation/generic/click</property>
   </binding>
  </action>

 </actions>
 
</PropertyList>
